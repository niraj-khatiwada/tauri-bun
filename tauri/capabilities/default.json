{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "stronghold:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "args": true,
          "name": "./bin/tauri-bun",
          "sidecar": true
        }
      ]
    },
    {
      "identifier": "fs:default",
      "allow": [
        {
          "path": "$APPDATA/**"
        }
      ]
    },
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "$APPDATA/*"
        }
      ]
    }
  ]
}
