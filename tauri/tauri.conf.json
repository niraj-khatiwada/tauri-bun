{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "tauri-bun",
  "version": "0.1.0",
  "identifier": "com.tauri-bun",
  "build": {
    "devUrl": "http://localhost:3001",
    "beforeBuildCommand": "bun compile",
    "frontendDist": "./packages/client/dist"
  },
  "app": {
    "windows": [
      {
        "title": "tauri-bun",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "externalBin": ["./bin/bun-tanstack"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
