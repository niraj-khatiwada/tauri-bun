{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "shell:allow-open",
    "shell:allow-kill",
    "shell:allow-stdin-write",
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "bin/tauri-bun-sidecar",
          "sidecar": true
        }
      ]
    }
  ]
}
